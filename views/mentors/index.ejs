<% layout('layouts/boilerplate')%>

<h1>All Mentors</h1>
<div>
    <a href="/mentors/new" class="btn btn-success mb-3">Add Mentor</a>
</div>

<div class="row">
    <% for (let mentor of mentors) { %>
    <div class="col-md-6 mb-3">
        <div class="card">
            <div class="row g-0">
                <div class="col-md-4">
                    <img class="img-fluid" alt="mentor-image" src="<%= mentor.image %>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= mentor.mentor_name %></h5>
                        <p class="card-text"><%= mentor.description %></p>
                        <p class="card-text"><small class="text-muted">Field: <%= mentor.field %></small></p>
                        <p class="card-text"><small class="text-muted">Email: <%= mentor.email %></small></p>
                        <a class="btn btn-primary" href="/mentors/<%= mentor._id %>">View <%= mentor.mentor_name %></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</div>
